{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES6",
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["src/shared/*"]
    },
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "moduleResolution": "bundler"
  }
}
